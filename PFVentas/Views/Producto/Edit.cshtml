@model PFVentas.Models.Producto

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar producto</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductoId" />
            <div class="form-group">
                <label asp-for="NomProd" class="control-label">Producto</label>
                <input asp-for="NomProd" class="form-control" />
                <span asp-validation-for="NomProd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantExist" class="control-label">Cantidad Existente</label>
                <input asp-for="CantExist" class="form-control" />
                <span asp-validation-for="CantExist" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioCosto" class="control-label">Precio de Costo</label>
                <input asp-for="PrecioCosto" class="form-control" />
                <span asp-validation-for="PrecioCosto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver al listado de productos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
